<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainActivityLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asisdroid.drawfun.MainActivity"
    >

    <!--STAR LAYOUT-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/draw_star_layout"
        android:layout_centerInParent="true"
        android:padding="8dp"
        android:visibility="gone"
        >

        <LinearLayout
            android:id="@+id/star_color_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:id="@+id/btn_star_fillcolor"
                android:layout_width="@dimen/shape_adjust_button_size"
                android:layout_height="@dimen/shape_adjust_button_size"
                android:src="@mipmap/circle_fill_color"
                android:background="@drawable/circlefilled"
                android:elevation="4dp"
                android:padding="2dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                />
            <ImageView
                android:id="@+id/btn_star_fill"
                android:layout_width="@dimen/shape_adjust_button_size"
                android:layout_height="@dimen/shape_adjust_button_size"
                android:src="@mipmap/star_unfill"
                android:background="@drawable/circlefilled"
                android:elevation="4dp"
                android:padding="2dp"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/starLayout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/star"
            android:layout_below="@+id/star_color_layout"
            android:layout_toRightOf="@+id/btn_star_close"
            android:layout_margin="@dimen/bottom_icons_padding"
            >
            <Button
                android:id="@+id/btn_star_OK"
                android:layout_width="@dimen/shape_adjust_ok_button_size"
                android:layout_height="@dimen/shape_adjust_ok_button_size"
                android:layout_centerInParent="true"
                android:background="@drawable/circlefilled"
                android:text="OK"
                android:textColor="@android:color/white"
                android:elevation="4dp"
                android:padding="2dp"
                />

        </RelativeLayout>

        <ImageView
            android:id="@+id/btn_star_close"
            android:layout_width="@dimen/shape_adjust_button_size"
            android:layout_height="@dimen/shape_adjust_button_size"
            android:src="@mipmap/close"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/circlefilled"
            android:elevation="4dp"
            android:padding="2dp"
            />

        <LinearLayout
            android:id="@+id/star_below_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/starLayout"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:id="@+id/btn_star_drag"
                android:layout_width="@dimen/shape_adjust_button_size"
                android:layout_height="@dimen/shape_adjust_button_size"
                android:src="@mipmap/circle_drag"
                android:background="@drawable/circlefilled"
                android:elevation="4dp"
                android:padding="2dp"
                android:layout_marginRight="4dp"
                />
            <ImageView
                android:id="@+id/btn_star_stretch_height"
                android:layout_width="@dimen/shape_adjust_button_size"
                android:layout_height="@dimen/shape_adjust_button_size"
                android:src="@mipmap/shape_stretch_vertical"
                android:background="@drawable/circlefilled"
                android:elevation="4dp"
                android:padding="2dp"
                android:layout_marginLeft="4dp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_star_size"
            android:layout_width="@dimen/shape_adjust_button_size"
            android:layout_height="@dimen/shape_adjust_button_size"
            android:src="@mipmap/circle_stretch"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/starLayout"
            android:background="@drawable/circlefilled"
            android:elevation="4dp"
            android:padding="2dp"
            />
    </RelativeLayout>

