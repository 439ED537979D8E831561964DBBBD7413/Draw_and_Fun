    <!--ADS LAYOUT-->
    <RelativeLayout
        android:id="@+id/fragLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
    <fragment
        android:name="com.asisdroid.drawfun.FragmentAd"
        android:id="@+id/fragment_ads4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </RelativeLayout>


    <!--Drawing canvas-->
    <RelativeLayout
        android:id="@+id/myDrawLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragLayout"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:id="@+id/linDrawViewContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
      <TextView
          android:id="@+id/appWatermark"
          android:layout_width="wrap_content"
          android:layout_height="?attr/actionBarSize"
          android:layout_alignParentRight="true"
          android:text="Draw &amp; Fun\nAndroid App"
          android:gravity="center_vertical"
          android:paddingLeft="8dp"
          android:paddingRight="8dp"
          android:layout_margin="5dp"
          android:drawableRight="@mipmap/ic_launcher"
          android:fontFamily="sans-serif-condensed"
          android:textStyle="bold|italic"
          android:textColor="@android:color/white"
          android:textSize="15sp"
          android:layout_alignParentBottom="true"
          android:background="@drawable/drawer_button_bg_without_background"
          />
    </RelativeLayout>

    <!--EXTRA OPTIONS LAYOUT-->

    <RelativeLayout
        android:id="@+id/extraOptionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomLayout"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:padding="8dp"
        android:alpha="0"
        android:visibility="gone"
        android:clickable="true"
        android:focusableInTouchMode="true"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mainoption_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:text="MY CANVAS"
            android:padding="2dp"
            android:background="@drawable/options_heading_bg"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:drawableLeft="@mipmap/my_canvas"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/mainoption_heading"
            android:id="@+id/layout_one"
            >
            <TextView
                android:id="@+id/btn_new_canvas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12dp"
                android:fontFamily="sans-serif"
                android:text="New Canvas"
                android:drawableTop="@mipmap/clear"
                android:gravity="center"
                android:textColor="@android:color/white"
                />
            <TextView
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12dp"
                android:fontFamily="sans-serif"
                android:text="Save"
                android:drawableTop="@mipmap/save"
                android:gravity="center"
                android:textColor="@android:color/white"
                />
            <TextView
                android:id="@+id/btn_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif"
                android:text="My Drawings"
                android:drawableTop="@mipmap/gallery"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layout_one"
            >
            <TextView
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12dp"
                android:fontFamily="sans-serif"
                android:text="Clear Canvas"
                android:drawableTop="@mipmap/close"
                android:gravity="center"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@+id/btn_rateapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12dp"
                android:fontFamily="sans-serif"
                android:text="Rate App"
                android:drawableTop="@mipmap/rate_app"
                android:gravity="center"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@+id/btn_dummy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif"
                android:text="Draw Circle /\nEllipse"
                android:drawableTop="@mipmap/circle"
                android:gravity="center"
                android:visibility="invisible"
                />
        </LinearLayout>

                <!--SEPARATOR HEADING FOR SHAPES-->
                <TextView
                    android:id="@+id/brush_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:text="CHOOSE BRUSH"
                    android:padding="2dp"
                    android:layout_below="@+id/layout_two"
                    android:background="@drawable/options_heading_bg"
                    android:textColor="@android:color/white"
                    android:elevation="4dp"
                    android:drawableLeft="@mipmap/brush_heading"
                    android:gravity="center_vertical"
                    />
                <LinearLayout
                    android:id="@+id/layout_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/brush_heading"
                    android:padding="5dp"
                    >

                    <TextView
                        android:id="@+id/btn_normal_brush"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif"
                        android:text="Normal"
                        android:drawableTop="@mipmap/normal_brush"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        />

                    <TextView
                        android:id="@+id/btn_brush_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:fontFamily="sans-serif"
                        android:text="Heart"
                        android:drawableTop="@mipmap/heart_brush"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:paddingBottom="5dp"
                        />
                    <TextView
                        android:id="@+id/btn_brush_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif"
                        android:text="Star"
                        android:drawableTop="@mipmap/star_brush"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/layout_five"
                    android:padding="5dp"
                    >

                    <TextView
                        android:id="@+id/btn_multistar_brush"
                        android:layout_width="wrap_content"
